inline DOUBLE spherical_bessel(const DOUBLE x, const int ell) {

    DOUBLE absx = ABS(x);
    DOUBLE x2;
    const DOUBLE threshold_even = 4e-2;
    const DOUBLE threshold_odd = 2e-2;
    switch (ell) {
        case 0:
            if (absx < threshold_even) {
                x2 = x * x;
                return 1 - x2 / 6 + (x2 * x2) / 120;
            }
            return SIN(x) / x;
        case 2:
            x2 = x * x;
            if (absx < threshold_even) return x2 / 15 - (x2 * x2) / 210;
            return (3 / x2 - 1) * SIN(x) / x - 3 * COS(x) / x2;
        case 4:
            x2 = x * x;
            DOUBLE x4 = x2 * x2;
            if (absx < threshold_even) return x4 / 945;
            return 5 * (2 * x2 - 21) * COS(x) / x4 + (x4 - 45 * x2 + 105) * SIN(x) / (x * x4);
        case 1:
            if (absx < threshold_odd) return x / 3 - x * x * x / 30;
            return SIN(x) / (x * x) - COS(x) / x;
        case 3:
            if (absx < threshold_odd) return x * x * x / 105;
            x2 = x * x;
            return (x2 - 15) * COS(x) / (x * x2) - 3 * (2 * x2 - 5) * SIN(x) / (x2 * x2);
        default:
            return gsl_sf_bessel_jl(ell, (double) x);
    }
}


inline DOUBLE legendre(const DOUBLE x, const int ell) {

    DOUBLE x2;
    switch (ell) {
        case 0:
            return 1.;
        case 2:
            x2 = x * x;
            return (3 * x2 - 1) / 2;
        case 4:
            x2 = x * x;
            return (35 * x2 * x2 - 30 * x2 + 3) / 8;
        case 1:
            return x;
        case 3:
            return (5 * x * x * x - 3 * x) / 2;
        default:
            return gsl_sf_legendre_Pl(ell, (double) x);
    }
}


inline void spherical_bessel_legendre_DOUBLE(const polearray *bins, const DOUBLE s, const DOUBLE mu, const DOUBLE mu2, const DOUBLE weight, DOUBLE *poles) {

    const int *ells = bins->ells;
    const int nells = bins->nells;
    const double *modes = bins->edges;

    for (int ill=0; ill<nells; ill++) {
        const int ell = ells[ill];
        DOUBLE leg = legendre(mu, ell);
        if (mu2 > -1.1) leg += legendre(mu2, ell);
        leg *= weight * (2*ell + 1);
        for (int imode=0; imode<bins->nedges; imode++) {
            const DOUBLE bessel = spherical_bessel(s*modes[imode], ell);
            poles[imode * bins->nells + ill] += bessel * leg;
        }
    }
}

